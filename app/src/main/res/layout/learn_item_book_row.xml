<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:background="@drawable/learn_shadoe"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/learn_spacing_standard">

        <ImageView
            android:id="@+id/ivCourse"
            android:layout_width="wrap_content"
            android:layout_height="180dp"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="@dimen/learn_spacing_control"
            android:src="@drawable/book1" />

        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/learn_spacing_control_half"
            android:rotation="90"
            android:src="@drawable/learn_ic_more"
            android:tint="@color/learn_textColorThird" />

        <TextView
            android:id="@+id/tvFeatureName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ivCourse"
            android:layout_marginStart="@dimen/learn_spacing_standard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/learn_spacing_standard_new"
            android:lineSpacingExtra="@dimen/learn_spacing_control"
            android:gravity="center"
            android:textAppearance="@style/LearnerFontSemiBold"
            android:textColor="@color/learn_textColorPrimary"
            android:textSize="@dimen/learn_font_size_medium"
            android:textStyle="bold"
            tools:text="Business\nManagement" />

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_10sdp"
            android:layout_below="@id/tvFeatureName"
            android:layout_marginStart="@dimen/learn_spacing_standard"
            android:layout_marginTop="@dimen/_12sdp"
            android:layout_marginEnd="@dimen/learn_spacing_standard_new"
            android:indeterminateTint="@color/learn_textColorSecondary"
            android:progress="50"
            android:progressTint="#56B126"
            android:visibility="gone" />

    </RelativeLayout>
</LinearLayout>